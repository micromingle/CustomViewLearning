<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.jiandan.terence.firstdraglayout.SwipeDeleteLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="415dp"
        android:layout_height="150dp"
        android:orientation="vertical">


        <com.jiandan.terence.firstdraglayout.CustomLayout
            android:id="@id/id_item_left"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="this is left view"
                android:textColor="@color/colorAccent" />
        </com.jiandan.terence.firstdraglayout.CustomLayout>

        <com.jiandan.terence.firstdraglayout.CustomLayout
            android:id="@id/id_item_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="this is right view"
                android:textColor="@color/colorAccent" />
        </com.jiandan.terence.firstdraglayout.CustomLayout>


    </com.jiandan.terence.firstdraglayout.SwipeDeleteLayout>
</LinearLayout>